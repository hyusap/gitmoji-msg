{
  "name": "gitmoji-msg",
  "description": "create gitmoji commit messages with ai!",
  "version": "0.0.1",
  "author": "hyusap",
  "bin": {
    "gitmoji-msg": "./bin/run.js"
  },
  "bugs": "https://github.com/hyusap/gitmoji-msg/issues",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "ai": "^4.3.16",
    "inquirer": "^12.6.3",
    "simple-git": "^3.28.0",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/inquirer": "^9.0.8",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/hyusap/gitmoji-msg",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "gitmoji-msg",
    "dirname": "gitmoji-msg",
    "commands": "./dist/commands",
    "default": "./dist/commands/generate.js",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " "
  },
  "repository": "hyusap/gitmoji-msg",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
